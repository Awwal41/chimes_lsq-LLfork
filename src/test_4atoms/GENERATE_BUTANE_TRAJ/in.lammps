units 		real
atom_style 	full

pair_style 	lj/cut 14.0 # Allows cutoff beyond rcut
pair_modify 	mix arithmetic tail yes

bond_style 	harmonic
angle_style 	harmonic
dihedral_style 	opls

read_data 	data.pdms18
velocity	all create 2000.0 4928459 mom yes rot yes dist gaussian		# Only used for first dynamics run
reset_timestep	0								# Only used for first dynamics run

atom_modify     sort 0 0.0

dump 		dump_1 all custom 40 dump.lammpstrj id element mol type q xu yu zu fx fy fz
dump_modify     dump_1 sort id
dump_modify     dump_1 element C C

thermo		400
thermo_style	custom step time ke pe evdwl ecoul epair ebond eangle edihed emol elong etail etotal temp press density 
thermo_modify	line one format float %20.5f


timestep 	0.5
fix 		1 all nvt temp 2000.0 2000.0 100.0 
fix_modify	1 energy yes
run 		10000
